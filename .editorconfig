root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,html,css,scss}]
indent_size = 2

[*.py]
max_line_length = 88
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab
